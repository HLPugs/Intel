{
	"name": "hlpugs-server",
	"version": "0.1.1",
	"private": true,
	"scripts": {
		"start": "cross-env NODE_ENV=dev npm run serve",
		"test-server": "cross-env NODE_ENV=test npm run serve",
		"test": "cross-env NODE_ENV=test && mocha",
		"build": "npm run build-ts && npm run tslint",
		"serve": "node dist/server.js",
		"watch-node": "nodemon dist/server.js",
		"sync": "cross-env NODE_ENV=dev typeorm schema:sync -c dev",
		"build-ts": "tsc -p tsconfig.json",
		"watch-ts": "tsc -w",
		"coverage": "nyc mocha",
		"codecov": "nyc report --reporter=json && codecov -f coverage/*.json",
		"tslint": "tslint -c tslint.json -p tsconfig.json",
		"build-db": "ts-node dev/buildDB.ts"
	},
	"dependencies": {
		"config": "^1.31.0",
		"connect-redis": "^3.3.3",
		"crypto": "^1.0.1",
		"dotenv": "^6.0.0",
		"express": "^4.16.3",
		"express-session": "^1.15.6",
		"npm": "^6.3.0",
		"pg": "^7.4.3",
		"request": "^2.88.0",
		"socket.io": "^2.1.1",
		"steam-login": "^0.1.7",
		"typeorm": "^0.2.15",
		"uuid": "^3.3.2",
		"winston": "^3.0.0"
	},
	"devDependencies": {
		"@types/chai": "^4.1.4",
		"@types/chai-as-promised": "^7.1.0",
		"@types/config": "0.0.34",
		"@types/connect-redis": "0.0.7",
		"@types/dotenv": "^4.0.3",
		"@types/express": "^4.16.0",
		"@types/express-session": "^1.15.10",
		"@types/mocha": "^5.2.5",
		"@types/node": "^11.11.0",
		"@types/pg": "^7.4.10",
		"@types/request": "^2.47.1",
		"@types/socket.io": "^1.4.36",
		"@types/steam-login": "^0.1.0",
		"@types/uuid": "^3.4.3",
		"@types/winston": "^2.3.9",
		"chai": "^4.1.2",
		"chai-as-promised": "^7.1.1",
		"codecov": "^3.0.4",
		"mocha": "^5.2.0",
		"nodemon": "^1.18.3",
		"nyc": "^12.0.2",
		"pg-minify": "^0.5.4",
		"source-map-support": "^0.5.9",
		"ts-node": "^7.0.0",
		"tslint": "^5.11.0",
		"tslint-config-airbnb": "^5.10.0",
		"typescript": "^3.0.1"
	},
	"nyc": {
		"include": [
			"src/**/*.ts"
		],
		"extension": [
			".ts",
			".tsx"
		],
		"require": [
			"ts-node/register"
		],
		"reporter": [
			"text-summary",
			"html"
		],
		"sourceMap": true,
		"instrument": true
	}
}
